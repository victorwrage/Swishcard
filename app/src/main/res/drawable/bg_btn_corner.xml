<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="1.0px" android:color="@color/line" />
			<corners android:topLeftRadius="0dp"
	    		android:topRightRadius="0dp"
	    		android:bottomLeftRadius="0dp"
	    		android:bottomRightRadius="0dp"/>
            <gradient android:angle="270.0" android:endColor="@color/colorAccent" android:startColor="@color/colorAccent" />
        </shape></item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <gradient android:angle="270.0" android:endColor="@color/white" android:startColor="@color/white" />
			<corners android:topLeftRadius="0dp"
	    		android:topRightRadius="0dp"
	    		android:bottomLeftRadius="0dp"
	    		android:bottomRightRadius="0dp"/>
            <stroke android:width="1.0px" android:color="@color/line" />
        </shape></item>
    <item><shape android:shape="rectangle">
            <gradient android:angle="270.0" android:endColor="@color/white" android:startColor="@color/white" />
			<corners android:topLeftRadius="0dp"
	    		android:topRightRadius="0dp"
	    		android:bottomLeftRadius="0dp"
	   			android:bottomRightRadius="0dp"/>
            <stroke android:width="1.0px" android:color="@color/line" />
        </shape></item>
    
</selector>
